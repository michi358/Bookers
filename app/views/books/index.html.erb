<h1>Books</h1>
<% @books .each do |book| %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan= '3'>空のセル</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><div class= nav><%= link_to 'Show',"show/#{book.id}" %></div></td>
        <td><div class= nav><%= link_to "Edit","edit/#{book.id}" %></div></td>
        <td><div class= nav><%= link_to "Destroy","destroy/#{book.id}" %></div></td>
      </tr>
      
    </tbody>
  </table>
    
  
<% end %>
    
  



<!--新規投稿機能-->
<h2>New book</h2>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:

  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>